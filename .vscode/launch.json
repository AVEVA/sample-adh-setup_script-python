  "version": "0.2.0",
  "configurations": [
  
    {
      "name": "Python: Run Program in Setup Mode",
      "type": "debugpy",
      "request": "launch",
      "program": "program.py",
      "console": "integratedTerminal",
      "args": ["Setup"]
    },
    {
      "name": "Python: Run Program in Run Mode",
      "type": "debugpy",
      "request": "launch",
      "program": "program.py",
      "console": "integratedTerminal",
      "args": ["Run"],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1"
      }
    },
    {
      "name": "Python: Run Program in Cleanup Mode",
      "type": "debugpy",
      "request": "launch",
      "program": "program.py",
      "console": "integratedTerminal",
      "args": ["Cleanup"]
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
